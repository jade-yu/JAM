<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="edu.dlsu.mobapde.jam.Activities.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background= "#FFA6A5BA">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="#172a3a"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JAM"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/beon"/>

            <ImageButton
                android:id="@+id/ib_goback"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_goback"
                android:cropToPadding="true" />

            <EditText
                android:layout_width="240dp"
                android:layout_height="25dp"
                android:id="@+id/et_search"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext"
                android:visibility="invisible"
                />


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/iv_search"
                android:layout_marginTop="10dp"
                android:src="@drawable/search"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="#FF384E77"
            app:tabIndicatorColor="#ead48a"
            app:tabSelectedTextColor="#FFEAD48A"
            app:tabTextColor="#fff"
            app:tabMode="scrollable"/>

        <FrameLayout
            android:id="@+id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/footer"
                android:background="#FF172A3A"
                android:orientation="horizontal"
                android:baselineAligned="true"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/cover"
                        android:id="@+id/main_album"
                        android:layout_marginLeft="10dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_mainsong"
                            android:text="Townie"
                            android:textSize="20sp"
                            android:fontFamily="@font/montserrat"
                            android:textColor="#fff"
                            android:layout_marginLeft="10dp"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:focusable="true"
                            android:layout_toRightOf="@id/main_album"
                            android:focusableInTouchMode="true"
                            android:scrollHorizontally="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_mainartist"
                            android:text="Mitski"
                            android:textSize="15sp"
                            android:fontFamily="@font/montserrat"
                            android:textColor="#fff"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:focusable="true"
                            android:layout_marginLeft="10dp"
                            android:layout_below="@id/tv_mainsong"
                            android:layout_toRightOf="@id/main_album"
                            android:focusableInTouchMode="true"
                            android:scrollHorizontally="true"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_alignParentRight="true">

                    <ImageButton
                        android:id="@+id/ib_back"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/btn_back"
                        android:cropToPadding="true" />

                    <ImageButton
                        android:id="@+id/ib_play"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/btn_play"
                        android:cropToPadding="true" />

                    <ImageButton
                        android:id="@+id/ib_next"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/btn_next"
                        android:cropToPadding="true" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>